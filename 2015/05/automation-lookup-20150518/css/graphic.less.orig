.chart-wrapper {
    width: 100%;
    float: none;
}

.bars rect {
  fill: #17807E;
}
.bars rect.highlight { fill: #E38D2C; }

.label text {
    font-size: 10px;
    -webkit-font-smoothing: antialiased;
    fill: #999;
}

@media screen and (min-width: 500px){
    .chart-wrapper {
        box-sizing: border-box;
        width: 50%;
        float: left;
        padding: 0 0 0 11px;

        &.wrap {
            clear: both;
            padding: 0 11px 0 0;

        }
    }

    .footnotes, .footer {
        padding-top: 10px;
        clear: both;
    }
}

